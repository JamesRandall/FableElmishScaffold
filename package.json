{
	"name": "fable-elmish-generator",
	"displayName": "fable-elmish-generator",
	"description": "Creates boilerplate areas for a typical Fable Elmish application",
	"version": "0.0.1",
	"publisher": "jamesrandall",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:extension.generateFullScaffold",
    "onCommand:extension.ejectScaffoldTemplates",
    "onCommand:extension.scaffoldApplicationComponents"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.generateFullScaffold",
        "title": "Scaffold Fable-Elmish Entity",
        "when": "editorLangId == fsharp"
      },
      {
				"command": "extension.ejectScaffoldTemplates",
        "title": "Eject Fable-Elmish Scaffold Templates",
        "when": "editorLangId == fsharp"
      },
      {
        "command": "extension.scaffoldApplicationComponents",
        "title": "Scaffold Fable-Elmish Application Components",
        "when": "editorLandId == fsharp"
      }
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/handlebars": "^4.1.0",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"handlebars": "^4.7.3"
	}
}
